extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box


        h1= project.project_name

        p= project.description

      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in projects.technologies
            li= technology

        a.btn-link(href=`${projects.live_link}`, target ="blank") Live Demo
        a.btn-link(href=`${projects.github_link}`, target="blank") GitHub Repo

    .project-img-box.box

      img.project-img(src=`${projecs.img_urls[1]}`, alt=`screenshot of ${projects.project_name}`)
      img.project-img(src=`${projects.img_urls[2]}`, alt=`screenshot of ${projects.project_name}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
